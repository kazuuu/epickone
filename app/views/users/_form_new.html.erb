<% javascript 'dynamic_cities' %>

<%= simple_form_for(@user, :html => { :class => 'form-horizontal', :id =>"user-form" }) do |f| %>          
      <%=  f.input :email %>
      <%=  f.input :first_name %>
      <%=  f.input :last_name %>
      <%=  f.input :gender %>
			<%=  f.association :state, collection: @states, :prompt => "Selecione-", :wrapper_html => { :id => "user-form-state_id", "data-cities-url" => update_city_select_users_path() } %>
			<%=  f.association :city, collection: @cities, :prompt => "Selecione-", :wrapper_html => { :id => 'cities-select-list'} %>
			<%=  f.input :birthday, as: :bootstrap_datepicker %>
      <%=  f.input :mobile_phone_number %>

      <%=  f.input :password %>

      <div class="form-actions">
      <%= f.submit "Sign Up", class: "btn btn-large btn-primary" %>
      <p><%= link_to 'Login with Facebook', facebook_login_path, id: "fb_sign_in", :class => "fbSignInButton" %></p>
      </div>
<% end %>
