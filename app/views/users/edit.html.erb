<div class="row">
  <div class="span12">
    <ul class="nav nav-tabs">
      <li class="active"><a href="#tab1" data-toggle="tab">DETALHES</a></li>
      <li>
        <a href="<%= user_path(current_user) %>#t_tab2">
           CONNECTAR
        </a>
