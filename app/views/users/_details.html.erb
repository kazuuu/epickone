<h1><%= @user.full_name %></h1>
<h2>Dados de Contato</h2>
<table class="table table-bordered">
	<tbody>
		<tr>
			<td class="col-md-3">Email:</td>
			<td class=""><%= @user.email %> <%= link_to "Editar", emails_path, :class=>"fancybox" %></td>
		</tr>
		<tr>
			<td class="col-md-3">Celular:</td>
			<td class=""><%= formata_telefone(@user.mobile_phone_number) unless @user.mobile_phone_number.nil? %>
<% if !@user.valid_mobile_phone %>
					<%= link_to "Enviar código de verificação (SMS)", send_mobile_phone_verification_user_path %>
<% end %>
				| <%= link_to 'Editar', edit_user_path(@user) %>
<% if !@user.valid_mobile_phone %>
				<%= form_tag(mobile_phone_verification_user_path(@user)) do %>
				  <%= label_tag "Celular não verificado. Coloque o código de verificação:" %>
				  <%=  text_field_tag :verification_code %>
				  <%= submit_tag "Validar" %>
				<% end %>
<% end %>
			</td>
		</tr>
	</tbody>
</table>

<h2>Informações Básicas</h2>
<table class="table table-bordered">
	<tbody>
		<tr>
			<td class="span2">Senha:</td>
			<td class="span3">********</td>
		</tr>
		<tr>
			<td class="span2">Sexo:</td>
			<td class="span3"><%= @user.gender_formatted %></td>
		</tr>

		<tr>
			<td class="">Data de Nascimento:</td>
			<td class="">
				<%= l @user.birthday, :format => :default %> 
		</tr>
		<tr>
			<td class="">Cidade / Estado:</td>
			<td class=""><%= @user.city.name %> / <%= @user.state.name_code %></td>
		</tr>
		<tr>
			<td class="">Endereco 1:</td>
			<td class=""><%= @user.address1 %></td>
		</tr>
		<tr>
			<td class="">Endereco 2:</td>
			<td class=""><%= @user.address2 %></td>
		</tr>
		<tr>
			<td class="">CEP:</td>
			<td class=""><%= @user.postcode %></td>
		</tr>
	</tbody>
</table>

	<%= link_to 'Edit', edit_user_path(@user) %> |
	<%= link_to 'Back', users_path %>

