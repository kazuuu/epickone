<div style="height:15px;">
</div>

<div class="row">
  <div class="span2">
      <%= image_tag(@user.avatar.url(:thumb), :style => "width:100px;height:100px;" ) %>
  </div>
  <div class="span10">
    <ul class="nav nav-tabs">
      <li class="active"><a href="#tab1" data-toggle="tab">DETALHES</a></li>
      <li>
        <a href="#tab2" data-toggle="tab">
           CONNECTAR
        </a>
      </li>
      <li><a href="#tab3" data-toggle="tab">Statement</a></li>
    </ul>

    <div class="tab-content">
      <div class="tab-pane active" id="tab1">
        <%= render 'users/details' %>  
      </div>
      <div class="tab-pane" id="tab2">  
        <%= render 'users/connect' %>  
      </div>
      <div class="tab-pane" id="tab3">
        <%= render 'users/temp' %>  
      </div>      
    </div>
  </div>
</div>

<script type="text/javascript">
  // Javascript to enable link to tab
  var hash = document.location.hash;
  var prefix = "t_";
  if (hash) {
      $('.nav-tabs a[href='+hash.replace(prefix,"")+']').tab('show');
  } 

  // Change hash for page-reload
  $('.nav-tabs a').on('shown', function (e) {
      window.location.hash = e.target.hash.replace("#", "#" + prefix);
  });
</script>
