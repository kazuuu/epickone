<% 
provide(:title, @user.first_name) 
session[:free_credits] = current_user.total_credits(nil) if session[:free_credits].nil?
%>
<p id="notice"><%= notice %></p>


<div class="row">
  <div style="float:left;">
    <div style="width:250px;height:500px;border-style:solid;border-width:1px;margin-top:0px;margin-right:20px;">
    </div>
  </div>
  <div style="width:620px;float:left;"> <!-- Only required for left/right tabs -->
    <ul class="nav nav-tabs">
      <li class="active"><a href="#tab1" data-toggle="tab">My Details</a></li>
      <li>
        <a href="#tab2" data-toggle="tab">
           Free Credits(<%= session[:free_credits].to_i.to_s %>) 
        </a>
      </li>
      <li><a href="#tab3" data-toggle="tab">Statement</a></li>
    </ul>

    <div class="tab-content">
      <div class="tab-pane active" id="tab1">
        <%= render 'users/details' %>  
      </div>
      <div class="tab-pane" id="tab2">  
        <%= render 'users/credit_available' %>  
      </div>
      <div class="tab-pane" id="tab3">
        <%= render 'users/credit_statement' %>  
      </div>      
    </div>
  </div>
</div>

