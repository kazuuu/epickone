<header class="navbar navbar-fixed-top"> 
  <div class="navbar-inner">
    <div class="container">
      <%= link_to "Pk One", root_path, id: "logo" %> 
      <nav>
        <ul class="nav pull-right">
          <li><%= link_to "Home", root_path %></li>
          <li><%= link_to "Help", help_path %></li>
          <li><%= link_to "Promos", '#' %></li>
          <% if current_user %> 
            <%
              #session[:cart_id] = nil
              @cart = current_cart if session[:cart_id].nil?
            %>
            <li><%= link_to "My Cart(" + session[:cart_count].to_s  + ")", checkout_cart_path(session[:cart_id]) %></li> 
            <li id="fat-menu" class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown"> 
                Account <b class="caret"></b>
              </a>
              <ul class="dropdown-menu">
                <li><%= link_to "Profile", current_user %></li> 
                <li><%= link_to "Edit Profile", edit_user_path(current_user.id) %></li>
                <li><%= link_to "Settings", '#' %></li>
                <li class="divider"></li>
                <li>
                  <%= link_to "Logout", :logout%>
                </li>
              </ul>
            </li>

          <% else %>
          
            <li><%= link_to "Sign Up", new_user_path %></li>
            <li><%= link_to "Login", :login %></li>
          <% end %>
        </ul> 
      </nav>
    </div>
  </div>
</header>
