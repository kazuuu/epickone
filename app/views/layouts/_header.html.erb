<header class="navbar navbar-inverse navbar-fixed-top"> 
  <div class="navbar-inner">
    <div class="container">
      <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </a>      
      <%= link_to "ePick One", root_path, id: "logo" %> 
      <div class="nav-collapse collapse">
        <ul class="nav">
          <li class="active"><%= link_to t("main.home"), root_path %></li>
          <li><%= link_to t("main.how_to_win"), how_to_win_path %></li>
          <li id="fat-menu" class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown"> 
              <%= t "main.country" %> <b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <li><%= link_to t("main.en"), locale: "en" %></li> 
              <li><%= link_to t("main.pt"), locale: "pt-BR" %></li>
            </ul>
          </li>
          <% if current_user %> 

          <% else %>
          <li><%= link_to t("main.sign_up"), new_user_path %></li>
          <li><%= link_to t("main.login"), :login %></li>
          <% end %>
        </ul>
        <% if current_user %>
        <ul class="nav pull-right">
          <%
            @cart = current_cart if session[:cart_id].nil?
          %>
          <li><%= link_to "My Cart(" + session[:cart_count].to_s  + ")", checkout_cart_path(session[:cart_id]) %></li> 
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown"><%= current_user.first_name %> <b class="caret"></b></a>
            <ul class="dropdown-menu">
              <li><%= link_to "Profile", current_user %></li> 
              <li><%= link_to "Edit Profile", edit_user_path(current_user.id) %></li>
              <li><%= link_to "Settings", '#' %></li>
              <li class="divider"></li>
              <li class="nav-header">Nav header</li>
              <li><%= link_to "Win Free Credits", wincredits_user_path(current_user) %></li> 
              <%= link_to "Logout", :logout%>
            </ul>
          </li>
        </ul>
        <% else %>
        <form class="navbar-form pull-right">
          <input class="span2" type="text" placeholder="Email">
          <input class="span2" type="password" placeholder="Password">
          <button type="submit" class="btn">Sign in</button>
        </form>
        <% end %>
      </div><!--/.nav-collapse -->
    </div>
  </div>
</header>
