<header class="navbar navbar-inverse navbar-fixed-top"> 
  <div class="navbar-inner">
    <div class="container">
      <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </a>      
      <%= link_to "ePick One", root_path, id: "logo" %>

      <%= form_tag root_path do %>
        <% # text_field_tag "account", "default info" %>
        <%= collection_select(:country, :code_alpha2, Country.order(:name), :code_alpha2, :name, params[:country].nil? ? {:prompt => "Selecione"} : {:selected => params[:country][:code_alpha2]}, {:onchange => 'this.form.submit()'}) %>
        <% # select_tag("country", options_from_collection_for_select(Country.order(:name), :code_alpha2, :name), {:selected => "US", :onchange => 'this.form.submit()'} ) %>
        <%= collection_select(:state, :state_id, State.order(:name), :id, :name, :prompt => 'Please select State') %>

        <% # submit_tag "Save" %>
      <% end %>
      
      
      <nav>
        <ul class="nav">
          <li class="<%= 'active' if current_page?(root_path) %>"><%= link_to t("main.home"), root_path %></li>
          <li class="<%= 'active' if current_page?(how_to_win_path) %>"><%= link_to t("main.how_to_win"), how_to_win_path %></li>
          <li id="fat-menu" class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown"> 
              <%= t "main.country" %> <b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <li><%= link_to t("countries.BR"), locale: "pt-BR" %></li>
              <li><%= link_to t("countries.US"), locale: "en" %></li> 
            </ul>
          </li>
        </ul>
        <ul class="nav pull-right">
        <% if current_user %>
          <%
            @cart = current_cart if session[:cart_id].nil?
          %>
          <li><%= link_to "My Cart(" + session[:cart_count].to_s  + ")", checkout_cart_path(session[:cart_id]) %></li> 
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown"><%= current_user.first_name %>
              <b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <li><%= link_to "Profile", current_user %></li> 
              <li><%= link_to "Edit Profile", edit_user_path(current_user.id) %></li>
              <li><%= link_to "Settings", '#' %></li>
              <li class="divider"></li>
              <li><%= link_to "Win Free Credits", wincredits_user_path(current_user) %></li> 
              <%= link_to "Logout", :logout%>
            </ul>
          </li>
        <% else %>
          <li class="<%= 'active' if current_page?(new_user_path) %>"><%= link_to t("main.sign_up"), new_user_path %></li>
          <li class="<%= 'active' if current_page?(:login) %>"><%= link_to t("main.login"), :login %></li>
        <% end %>
        </ul>
      </nav><!--/.nav-collapse -->
    </div>
  </div>
</header>
