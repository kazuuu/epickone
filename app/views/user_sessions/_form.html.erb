<%= simple_form_for(@user_session, :wrapper => :bootstrap, :html => { :class => 'form-signin', :style => 'width:350px;' }) do |f| %>
			<h2 class="form-signin-heading">Entrar no ePick One</h2>
      <%= f.input :email, :input_html => {:class => 'form-control'}, :placeholder => "Email", label: false  %>
      <%= f.input :password, :input_html => {:class => 'form-control', :size => "100%"}, :placeholder => "Senha", label: false  %>
      <%= f.input :remember_me, :as => :boolean, :label => false, :inline_label => true %>
			<%= f.submit "Login", class: "btn btn-lg btn-primary btn-block", :style => 'width:220px;'  %>
			<p>New user? <%= link_to "Sign up now!", new_user_path %></p> 
			<p><%= link_to "Forgot password", new_password_reset_path %></p>
<% end %>