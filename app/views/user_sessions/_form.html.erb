


<%= simple_form_for(@user_session, :html => { :class => 'form-horizontal' }) do |f| %>
  <div class="row">
    <div class="span6 offset3">
      <%= f.input :email %><br />
      <%= f.input :password %><br />
      <%= f.input :remember_me, :as => :boolean, :label => false, :inline_label => true %>
      <div class="form-actions">
        <%= f.submit "Login", class: "btn btn-large btn-primary" %>
        <p>New user? <%= link_to "Sign up now!", new_user_path %></p> 
        <p><%= link_to 'Login with Facebook', fb_login_path, id: "fb_sign_in", :class => "fbSignInButton" %></p>
        <p><%= link_to 'Login with Twitter', tw_login_path %></p>
        <p><%= link_to "Forgot password", new_password_reset_path %></p>
      </div>
    </div>
  </div>
<% end %>



