<% content_for :head do %>
  <style type="text/css">
    #nav_slide { margin: 20px auto }
    #nav_slide a { padding: 4px 6px; margin: 3px; border: 1px solid #ccc; text-align: center; text-decoration: none; background-color: #ddd }
    #nav_slide a.activeSlide { color: #c00 }
    #nav_slide a:focus { outline: none; }

    .slideshow { }
    .slide {}
    .slideshow, .slide { height: 300px; width: 100%;}
    .slideshow img {  border: 1px solid #ccc; background-color: #eee; margin: 0 }
    
    .hero-unit {
      padding-top: 60px;
      padding-bottom: 0px;
      padding-left: 0px;
      padding-right: 0px;
      margin-bottom: 0px;
      height:240px;
      font-size: 18px;
      font-weight: 200;
      line-height: 30px;
      color: inherit;
      cursor:pointer
      background-color: #eeeeee;
      -webkit-border-radius: 6px;
      -moz-border-radius: 6px;
      border-radius: 6px;
    }
		.circle_home{
			float:left;
			position:relative;
			top:-40px;
			left:-20px;
			width:70px;
			height:47px;
			padding-top:23px;
			border-radius:35px;
			font-size:50px;
			color:#FFF;
			text-align:center;
			background:#3c3a3a;
		}
		.box_text {
		font-size: 20px;
		position:relative;
		width:300px;
		left:0px;
		}
  </style>
<% end %>
<%= javascript_include_tag "jquery.cycle2" %>

<% content_for :wide do %>
<div class="container">
	<div class="row">
	  <div class="span12">
	    <h3>Acerte o QUIZ e concorra a grandes prêmios!</h3>
	  </div>
	</div>
</div>

<div class="row" style="height:450px;">
  <div class="cycle-slideshow" style="height:450px;" data-cycle-fx="fade" 
    data-cycle-timeout="3000"
    data-cycle-slides="> div" >
    <% @events_promo.each do |promo_event| 
			promo_bg = promo_event.photos.find_by_image_type('banner_bg').first
			promo_photo = promo_event.photos.find_by_image_type('banner_image').first
    %>
    	<div class="slide slide_banner" style="position:relative;float:left;">
    	  <div style="clear: both;width:100%;height:450px;background:#232323 url(<%= promo_bg.image.url(:original) if !promo_bg.nil? %>) no-repeat; background-size:100% 450px;">
        </div>
        <div style="position:absolute;top:0px;left:0px;width:100%;height:450px;background:transparent url(<%= promo_photo.image.url(:original) if !promo_photo.nil? %>) no-repeat center;">
        </div>
        <div style="position:absolute;top:0px;left:0px;width:100%;height:450px;text-align:center;">
          <%= link_to(image_tag('transparent.png', :style => "height:100%;width:100%;"), promo_event) %>
        </div>
 				<div class="container" style="">
	        <div style="line-height:30px;font-size:26px;position:relative;top:-275px;left:5px; z-index:7500;color:white;">
	          <div style="font-weight:bold;"><%= promo_event.headline %>?</div>
	          <div style="font-size:80%;font-style:italic;">Evento promovido pela: <%= promo_event.promoter %></div>
	          <div style="margin-top:10px;font-weight:bold;">Participe agora do evento: <%= link_to(promo_event.title, promo_event) %></div>
	          <div style="font-size:80%;font-style:italic;"></div>
	        </div>
	
					<div class="home_buttons" style="position:relative;top:-270px;left:0px;">
		        <div class="buttonbox_out" style="position:relative;float:left;width:130px;z-index:7500;">
		          <div class="buttonbox_in">
		          <%=link_to "Participar", promo_event, :class => "btn btn-black btn-bigger btn-primary" %>
		          </div>
		        </div>
		        <div class="buttonbox_out" style="position:relative;float:left;width:190px;z-index:7500;margin-left:10px;">
		          <div class="buttonbox_in">
		          <%=link_to "Como concorrer", how_it_works_path, :class => "btn btn-black btn-bigger btn-primary" %>
		          </div>
		        </div>
		        <div class="buttonbox_out" style="position:relative;float:left;width:150px;z-index:7500;margin-left:10px;">
		          <div class="buttonbox_in">
		          <%=link_to "Cadastre-se", new_user_path, :class => "btn btn-black btn-bigger btn-primary" %>
		          </div>
		        </div>
	        </div>
	        <div style="line-height:30px;font-size:21px;color:#FFF;position:relative;top:-180px;left:-520px;z-index:7500;">
						Data final:	<%= l promo_event.end_date, :format => :simple %><br> 
						<%= t("home.time_left")%>: <%= promo_event.distance_of_time %>
	        </div>
				</div><!-- div Container-->
      </div> <!-- div Slide Banner-->
    <% end %>  
  </div> <!-- div clycle-->
</div>
<% end %>
<div class="row">
  <div class="span12">
    <h1>Veja por que é muito mais fácil concorrer a prêmios aqui...</h1>
  </div>
</div>
<div class="row">
  <div class="span4" style="position:relative;">
		<div class="box_curved_gray">
			<div class="circle_home">1</div>
	    <div class="row-fluid box_text">
	    	Um único cadastro e participe de eventos de diversas empresas.
			</div>
		</div>
  </div>

  <div class="span4">
		<div class="box_curved_gray" style="position:relative;left:10px;">
			<div class="circle_home">2</div>
	    <div class="row-fluid box_text">
	    	Fique tranquilo! Não é preciso dar tantas informações pessoais.
			</div>
	  </div>
  </div>
  <div class="span4">
		<div class="box_curved_gray" style="position:relative;left:20px;">
			<div class="circle_home">3</div>
	    <div class="row-fluid box_text">
	    	Participe quando quiser! Afinal, não custa nada tentar!
			</div>
		</div>
  </div> <!-- end span4 homebox -->
</div>
