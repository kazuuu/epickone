<% @promo_draws.each do |promo_draw| %>
  <%= link_to(image_tag("draw_" + promo_draw.id.to_s + ".jpg", :alt => "home image", :width => 1000, :height => 100, :title => "Click here to return to Home"), promo_draw) %><br>

<% end %>
<div class="center hero-unit">
  <h1>Welcome to the ePick One</h1>
  <h2>
    Win prizes
    <a href="http://railstutorial.org/">at ePick One</a> right now.
  </h2>
  <div>
  <%= link_to "Sign up now!", new_user_path, class: "btn btn-large btn-primary" %>
  </div>
</div>




<div class="row">
    <% @draws.each_slice(3) do |row| %>
      <% row.each do |col| %>
      <div class="span4 center">
        <h2><%= link_to(col.title, col) %></h2>
        <p><%= link_to(image_tag(col.avatar.url(:medium)), col) %></p>
        <p>Time left: <%= time_ago_in_words(col.date_due) %></p>
        <p>
        <% if  Time.now <= col.date_due %>
          <%= link_to "Join this draw", col, :class => "btn btn-large btn-primary" %>
        <% else %>
          <%= link_to "Finished", "#", :class => "btn btn-large btn-primary" %>
        <% end %>
        </p>
      </div>
      
      <% end%>
    <% end %>
</div>


